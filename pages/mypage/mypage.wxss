  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 20rpx solid #efefef;

}

.deco {
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.ava {
  margin-top: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.nn {
  margin-top: 40rpx;
  font-size: 38rpx;
  color: white;
  padding-bottom: 40rpx;
}

.userImg{
